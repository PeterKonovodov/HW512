<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorNormalKeys</item>
    </style>

    <style name="CalcButtonsStyle" parent="AppTheme">
        <item name="android:backgroundTint">@color/colorNormalKeys</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CalcButtonsStyle.Operation">
        <item name="android:backgroundTint">@color/colorActionKeys</item>
    </style>

    <style name="CalcButtonsStyle.Sci">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">15sp</item>

    </style>
    <style name="CalcButtonsStyle.Sci.Operation1">
        <item name="android:backgroundTint">@color/colorActionKeys</item>
    </style>
    <style name="CalcButtonsStyle.Sci.Operation2">
        <item name="android:backgroundTint">@color/colorAction2Keys</item>
    </style>


</resources>