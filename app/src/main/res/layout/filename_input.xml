<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/filenameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="invisible"
    tools:visibility="visible">

    <TextView
        android:id="@+id/titleDownloads"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="24dp"
        android:textSize="16sp"
        tools:ignore="HardcodedText"
        android:text="Downloads/"
        android:gravity="center|end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorFileNameField"
        />

    <EditText
        android:id="@+id/editTextFileName"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textSize="16sp"
        tools:ignore="HardcodedText"
        android:hint="12.jpg"
        app:layout_constraintTop_toTopOf="@id/titleDownloads"
        app:layout_constraintStart_toEndOf="@id/titleDownloads"
        tools:layout_editor_absoluteX="168dp"
        android:background="@color/colorFileNameField"/>

    <Button
        android:id="@+id/loadButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        tools:ignore="HardcodedText"
        android:text="load"
        app:layout_constraintStart_toEndOf="@+id/editTextFileName"
        app:layout_constraintTop_toTopOf="@id/editTextFileName" />

</androidx.constraintlayout.widget.ConstraintLayout>